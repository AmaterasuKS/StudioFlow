{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=studioflow.db"
  },
  "Jwt": {
    "SecretKey": "your-secret-key-min-32-characters-long!!!",
    "Issuer": "StudioFlow",
    "Audience": "StudioFlow.Client",
    "ExpirationMinutes": 60
  },
  "Security": {
    "SecretsPolicy": "Do NOT commit real SecretKey, API tokens, or database passwords. Use environment variables/secret manager."
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
